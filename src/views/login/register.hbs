<div class="block mx-auto my-10 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg" >
    <h1 class="text-2xl py-2 font-bold text-center">
        Formulario de Registro
    </h1>
    
    <form action="" method="POST" class="mt-4 grid place-items-center">
        <input
        oninvalid="this.setCustomValidity('Ingrese el campo')"
        oninput="setCustomValidity('')"
        class="bg-gray-100 border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:gb-white shadow-md"
         type="text" name="nombre" placeholder="Nombre" id="nombre" required>

        <input
        class="bg-gray-100 border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:gb-white shadow-md"
        oninvalid="this.setCustomValidity('Ingrese un correo valido')"
        oninput="setCustomValidity('')"
        type="email" name="correo" placeholder="Correo" id="correo" required>

        <input
        oninvalid="this.setCustomValidity('Ingrese el campo')"
        oninput="setCustomValidity('')"
        class="bg-gray-100 border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:gb-white shadow-md"
        type="password" name="password" placeholder="Contrase単a" id="password" required>

        {{#if error}}
      <p class="text-center text-red-500 text-sm">{{error}}</p>
      {{/if}}
        <button
            class="rounded-md bg-green-500 w-60 text-lg text-white font-semibold p-2 my-3 hover:bg-green-600
            focus:bg-green-900 shadow-lg "
         type="submit">
            <span class="pl-14 pr-12">Ingresar</span>
           <i class="fas fa-arrow-right  justify-end"></i>

        </button>

    </form>

